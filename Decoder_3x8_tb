module decode_3x8_tb();
  reg [0:2] i;
  wire [0:7] y;
  
  decode_3x8 uut (y,i);
  
  initial
    begin
           i=3'b000;
       #5; i=3'b001; 
       #5; i=3'b010; 
       #5; i=3'b011;  
       #5; i=3'b100; 
       #5; i=3'b101;  
       #5; i=3'b110; 
       #5; i=3'b111;
    end
  
  initial
    begin 
      $dumpfile("dump.vcd");
      $dumpvars(1);
    end
endmodule
